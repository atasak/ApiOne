{
  "spec_dir": "spec",
  "spec_files": [
    "compiler/**/*.spec.ts",
    "runtime/**/*.spec.ts"
  ],
  "helpers": [
    "helpers/**/*.ts"
  ],
  "stopSpecOnExpectationFailure": false,
  "random": false,
  "reporters": [
    {
      "name": "jasmine-spec-reporter#SpecReporter",
      "options": {
        "displayStackTrace": "all"
      }
    }
  ]
}
