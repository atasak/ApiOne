{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "declaration": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2015",
      "es2015.promise",
      "es2015.proxy"
    ],
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "apiwrapper": [
        "dist/runtime/syncsystem/contentwrappers"
      ]
    }
  },
  "include": [
    "spec/common/src"
  ],
  "exclude": [
    "node_modules",
    "src",
    "apiwrapper",
    "dist",
    "**/*.bak/*",
    "**/*.spec.ts"
  ]
}
