{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "declaration": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2015",
      "es2015.promise",
      "es2015.proxy"
    ],
    "outDir": "spec/dist",
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "apiwrapper": [
        "src/runtime/contentwrappers"
      ]
    },
    "rootDir": "spec/common"
  },
  "include": [
    "spec/common"
  ],
  "exclude": [
    "node_modules",
    "src",
    "apiwrapper",
    "dist",
    "**/*.bak/*",
  ]
}
